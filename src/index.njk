---
layout: default
---

<div class="content">
    <h2 class="m_3">
        Now in Cinema!
    </h2>
    <div class="movie_top">
        <div class="col-lg-12 movie_box">
            {% for movie in movies -%}
                <div class="movie movie-test movie-test-dark movie-test-left">
                    <div class="movie__images">
                        <a href="/movie/{{ movie.fields.title | slug }}" class="movie-beta__link">
                            <img alt="{{ movie.fields.image.fields.title }}" src="{{ movie.fields.image.fields.file.url }}?fit=pad&w=200&h=250" class="img-responsive">
                        </a>
                    </div>
                    <div class="movie__info">
                        <a href="/movie/{{ movie.fields.title | slug }}" class="movie__title">
                            {{ movie.fields.title }}
                        </a>
                        <ul class="list_6">
                            <li>
                                <p style="margin-right:8px;">
                                    Director:
                                </p>
                                <p>{{ movie.fields.director }}</p>
                            </li>
                            <li>
                                <p style="margin-right:8px;">
                                    Release Date:
                                </p>
                                <p>{{ movie.fields.releaseDate }}</p>
                            </li>
                            <li>
                                <p style="margin-right:8px;">
                                    Age Restriction:
                                </p>
                                <p>{{ movie.fields.age }}</p>
                            </li>
                            <li>
                                <p style="margin-right:8px;">
                                    Price:
                                </p>
                                <p>{{ movie.fields.price }}</p>
                            </li>
                            <div class="clearfix"></div>
                        </ul>
                    </div>
                    <div class="clearfix"></div>
                </div>
            {%- endfor %}
        </div>
        <div class="clearfix"></div>
    </div>
</div>