---
pagination:
    data: movies
    size: 1
    alias: movie
permalink: "movie/{{ movie.fields.title | slug }}/"
layout: default
---

<div class="content">
    <div class="movie_top">
        <div class="col-md-9 movie_box">
            <div class="grid images_3_of_2">
                <div class="movie_image">
                    <img alt="{{ movie.fields.image.fields.title }}" src="{{ movie.fields.image.fields.file.url }}" class="img-responsive">
                </div>
            </div>
            <div class="desc1 span_3_of_2">
                <p class="movie_option">
                    <strong>Director:</strong>
                    {{ movie.fields.director }}
                </p>
                <p class="movie_option">
                    <strong>Release Date:</strong>
                    {{ movie.fields.releaseDate }}
                </p>
                <p class="movie_option">
                    <strong>Age:</strong>
                    {{ movie.fields.age }}
                </p>
                <p class="movie_option">
                    <strong>Actors:</strong>
                    {% for actor in movie.fields.actors %}
                        {{ actor.fields.name }}
                        {{ actor.fields.surname }},
                    {% endfor %}
                </p>
                <div class="down_btn">
                    <button class="btn1 snipcart-add-item" data-item-id="{{ movie.sys.id }}" data-item-price="{{ movie.fields.price }}" data-item-name="{{ movie.fields.title }}" data-item-image="{{ movie.fields.image.fields.file.url }}" data-item-url="/movie/{{ movie.fields.title | slug }}/">
                        Watch
                    </button>
                </div>
            </div>
            <div class="clearfix"></div>
            <p class="m_4">
                {{ movie.fields.description }}
            </p>
            <div class="clearfix"></div>
        </div>
        <div class="clearfix"></div>
    </div>
</div>